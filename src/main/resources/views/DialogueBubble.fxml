<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_RIGHT" prefWidth="400.0" spacing="5.0" type="HBox"
         xmlns="http://javafx.com/javafx/15.0.1">
    <padding>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
    </padding>
    <Label fx:id="messageBubble" maxWidth="270.0" style="-fx-background-color: #656565; -fx-background-radius: 9;"
           text="message body" textFill="WHITE" wrapText="true">
        <HBox.margin>
            <Insets/>
        </HBox.margin>
        <padding>
            <Insets bottom="3.0" left="5.0" right="5.0" top="3.0"/>
        </padding>
    </Label>
    <ImageView fx:id="profilePicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true"/>
</fx:root>
