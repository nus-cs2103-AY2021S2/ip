<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bearbear.ui.MainWindow">
    <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" vvalue="1.0" VBox.vgrow="ALWAYS">
        <VBox fx:id="dialogContainer" VBox.vgrow="ALWAYS"/>
    </ScrollPane>
        <HBox fx:id="hBox" minHeight="40.0" prefHeight="40.0" VBox.vgrow="NEVER">
                    <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="40.0" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="40.0" prefWidth="70.0" text="Send" HBox.hgrow="ALWAYS">
                    </Button>
        </HBox>
</VBox>
